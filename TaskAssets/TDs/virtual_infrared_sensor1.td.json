{
    "@context":[
        "https://www.w3.org/2019/wot/td/v1",
        {
          "@language":"en"
        }
      ],
    "@type":"Thing",
    "title": "VirtualInfraredSensor1",
    "id": "urn:dev:ops:32473-virtual-sensor-1",
    "description": "Infrared sensor for the detection of objects (Virtual)",
    "security": "nosec_sc",
    "securityDefinitions": { 
      "nosec_sc": {
        "scheme": "nosec" 
      }
    },
    "properties": {
        "objectPresence":{
            "title": "Read infrared sensor",
            "description": "get the sensor state if there is object. Polling to update observe happens every 100ms",
            "type": "boolean",
            "readOnly": true,
            "observable": true,
            "forms": [
              {
                "href": "http://localhost:9001/virtualinfraredsensor1/properties/objectPresence",
                "contentType": "application/json",
                "op": [
                  "readproperty"
                ],
                "htv:methodName": "GET"
              }
            ]
        },
        "objectDistance":{
            "title": "Read infrared sensor",
            "description": "get the sensor state if there is object",
            "type": "number",
            "readOnly": true,
            "observable": false,            
            "unit": "millimeter",
            "forms": [
              {
                "href": "http://localhost:9001/virtualinfraredsensor1/properties/objectDistance",
                "contentType": "application/json",
                "op": [
                  "readproperty"
                ],
                "htv:methodName": "GET"
              }
            ]
        }

    }
}