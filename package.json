		"blue-light": "node dist/blueLight.js"
	},
	"dependencies": {
		"@node-wot/core": "0.9.1",
		"@node-wot/binding-coap": "0.9.1",
		"@node-wot/binding-http": "0.9.1",
		"wot-typescript-definitions": "^0.7.3"
	},
	"devDependencies": {
		"@tsconfig/node20": "^20.1.4",
		"typescript": "^5.7.2",
		"concurrently": "^9.1.2"
	}
}
